= render partial: 'shopping_cart/view', locals: { c_products: @c_products}
<hr />
- if @products && @products.length > 0
  - @products.each do |product|
    .product-wrapper
      .name
        = product.name
      .description
        = product.description
      .actions
        = link_to 'Add to cart', shopping_cart_add_path(product)
